.navbar {
    position: relative;
    z-index: 1;
    background-color: white;
}

.navbar-nav {
    text-align: center;
}

.navbar-brand {
    font-family: 'Open Sans', sans-serif;
    font-size: 30px;
}

.nav-link {
    text-transform: uppercase;
    margin-right: 20px;
}


/*JUMBOTRON*/

.jumbotron {
    background-size: cover;
    color: white;
    text-align: center;
    height: 100vh;
    margin-top: -75px;
    text-transform: uppercase;
    background-position: bottom;
    position: relative;
}

.jumbotron-about {
    height: 60vh;
    background-position: center center;
}

.jumbotron::after {
    content: '';
    display: block;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    position: absolute;
    bottom: 0;
}

.jumbotron .container {
    margin-top: 35vh;
    position: relative;
    z-index: 1;
}

.jumbotron.jumbotron-about .container {
    margin-top: 15vh;
}

.jumbotron .container h1 {
    margin-top: 30px;
    margin-bottom: 30px;
    font-size: 3rem;
}

.jumbotron .container p.lead {
    font-size: 1rem;
}


/* link item*/

li.grid-items {
    display: inline-block;
}

li.grid-items a.nav-link {
    color: #B75717;
    font-size: 1rem;
    font-weight: 670;
}

.owl-stage {
    margin: 0 auto;
}


/* MASONRY */

.card.masonry-card:hover {
    background-color: black;
    height: 100%;
    width: 100%;
}

.hover-masonry {
    display: flex;
    position: absolute;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(26, 26, 26, 0.61);
    transition: 0.3s;
    opacity: 0;
}

.hover-masonry:hover {
    opacity: 1;
}


/*Quotes*/

.quotes {
    margin-top: 40px;
    margin-bottom: 40px;
}

h1.title-quotes {
    font-size: 2rem;
    text-align: center;
    padding-top: 30px;
}

p.title-quotes.text-right {
    font-size: .8rem;
    font-style: italic;
}

.quotext.border-left {
    border-left: none !important;
    padding-top: 25px;
    padding-bottom: 25px;
}


/*blog*/

.blog {
    background-color: #F2EBF2;
    padding: 80px 0 80px 0;
}

.card {
    background-color: transparent;
    border: none;
}

.card-rebel a.rebel-link {
    color: rgb(43, 43, 43);
    font-weight: 500;
}

a.btn.btn-hover-rebel {
    background-color: transparent;
    border: 2px solid white;
    border-radius: 0;
    font-weight: 600;
}


/* info company */

.info-company {
    padding: 40px 10px 40px 10px;
}

.info-company .icon-info {
    font-size: 2rem;
}

.info-company a.link-info {
    color: rgb(78, 78, 78);
}

.info-company a.link-info:hover {
    text-decoration: none;
}

.info-company svg.icon-info {
    padding: 20px 0 20px 0;
}

.info-text {
    display: none;
}


/* DESKTOP STYLING CSS  */

@media(min-width:992px) {
    .navbar {
        background-color: transparent;
        color: white;
        font-weight: bold;
    }
    .navbar .navbar-brand {
        color: white;
    }
    .navbar-light .navbar-nav .nav-link {
        color: white;
        transition: .3s;
    }
    .navbar-nav {
        text-align: right;
    }
    /* jumbotron */
    .jumbotron .container h1 {
        font-size: 3.5rem;
    }
    .jumbotron .container p.lead {
        font-size: 1.25rem;
    }
    /* Blog */
    .card .card-body {
        padding: 1.25rem 0 1.25rem 0;
    }
    .card-rebel img.card-img-top {
        width: 100%;
        height: 15vw;
        object-fit: cover;
    }
    /*product menu*/
    div.scrollmenu {
        overflow: auto;
        white-space: nowrap;
    }
    .product-nav {
        margin-top: 30px;
        margin-bottom: 30px;
    }
    /*quotes*/
    .quotes .padding-box-rebel {
        padding: 80px 0 80px 0;
    }
    h1.title-quotes {
        font-size: 2.3rem;
        text-align: left;
    }
    p.title-quotes.text-right {
        font-size: 1rem;
        font-style: italic;
    }
    .quotext.border-left {
        border-left: 1px solid #dee2e6!important;
    }
    /* Info */
    .info-company .icon-info {
        font-size: 3rem;
    }
    .info-text {
        display: block;
    }
}


/* STYLING ABOUT PAGE */

.about-desc {
    margin-top: 100px;
    margin-bottom: 100px;
}

.about-desc h2.title-desc {
    text-transform: uppercase;
    font-weight: 700;
}

.about-desc h2.title-desc {
    margin: 30px 0 30px 0;
}

.about-desc .info-us {
    margin: 25px 0 25px 0 !important;
}


/* slider */

.list-project-container {
    margin-bottom: 100px;
}

img.card-img-top.img-slider {
    width: 200px;
    height: 300px;
}

.card .card-body.about-slider {
    position: absolute;
    background: #00000052;
    width: 100%;
    height: 100%;
    color: white;
    transition: .3s all;
}

.card .card-body.about-slider:hover {
    background: transparent;
}

.card .card-body.about-slider p {
    margin-top: 50%;
    font-weight: 600;
}

.card p.card-text.about-slide-text {
    position: relative;
}

.card p.card-text.about-slide-text:after {
    position: absolute;
    content: '';
    height: 2px;
    bottom: -5px;
    margin: 0 auto;
    left: 0;
    right: 0;
    width: 50%;
    background: white;
}

@media (min-width:992px) {
    .about-desc .info-us {
        margin-top: auto !important;
        margin-bottom: auto !important;
    }
}